{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "plan": {
      "model": "zai-coding-plan/glm-4.7"
    },
    "build": {
      "model": "zai-coding-plan/glm-4.5-air"
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "ask",
      "rm *": "deny",
      "grep *": "allow",
      "ls *": "allow",
      "find *": "allow",
      "head *": "allow",
      "tree *":"allow",
      "cat *":"allow",
      "wc *":"allow",
      "sort *":"allow",
      "echo *": "allow"
    },
    "skill": "ask",
    "webfetch": "deny",
    "doom_loop": "ask",
    "read": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "external_directory": "ask"
  }
}
